# Apache Spark Configuration
# Copy this file to .env and modify as needed

# Spark Master Configuration
SPARK_MODE=master
SPARK_MASTER_HOST=spark-master
SPARK_MASTER_PORT=7077
SPARK_MASTER_WEBUI_PORT=8080

# Spark Worker Configuration
SPARK_WORKER_WEBUI_PORT=8081

# Security Configuration
SPARK_RPC_AUTHENTICATION_ENABLED=false
SPARK_RPC_ENCRYPTION_ENABLED=false
SPARK_LOCAL_STORAGE_ENCRYPTION_ENABLED=false
SPARK_SSL_ENABLED=false

# Performance Settings
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2g
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_MEMORY=1g

# Storage Settings
SPARK_WORKER_DIR=/opt/bitnami/spark/work
SPARK_LOCAL_DIRS=/opt/bitnami/spark/tmp

# Network Settings
SPARK_NETWORK_TIMEOUT=800s
SPARK_RPC_ASK_TIMEOUT=600s
SPARK_RPC_LOOKUP_TIMEOUT=600s
