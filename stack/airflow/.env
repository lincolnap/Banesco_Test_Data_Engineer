# Apache Airflow Configuration
# Copy this file to .env and modify as needed

# User Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Executor Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Database Configuration
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow_user:airflow_password123@airflow-db:5432/airflow_db

# Security Configuration
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here

# DAG Configuration
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false

# API Configuration
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# Webserver Configuration
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=true
AIRFLOW__WEBSERVER__EXPOSE_HOSTNAME=true
AIRFLOW__WEBSERVER__EXPOSE_STACKTRACE=true

# Scheduler Configuration
AIRFLOW__SCHEDULER__ENABLE_HEALTH_CHECK=true

# Logging Configuration
AIRFLOW__LOGGING__LOGGING_LEVEL=INFO
AIRFLOW__LOGGING__FAB_LOGGING_LEVEL=WARN

# Email Configuration (Optional)
AIRFLOW__EMAIL__EMAIL_BACKEND=airflow.utils.email.send_email_smtp
AIRFLOW__EMAIL__SMTP_HOST=localhost
AIRFLOW__EMAIL__SMTP_STARTTLS=true
AIRFLOW__EMAIL__SMTP_SSL=false
AIRFLOW__EMAIL__SMTP_USER=
AIRFLOW__EMAIL__SMTP_PASSWORD=
AIRFLOW__EMAIL__SMTP_PORT=587
AIRFLOW__EMAIL__SMTP_MAIL_FROM=
